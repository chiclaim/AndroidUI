<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingTop="50dp">

    <com.chiclaim.android.ui.view.StampView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:circle_color="#ff9900"
        app:circles_gap="2dp"
        app:inside_circle_border_width="1dp"
        app:outside_circle_border_width="1.7dp"
        app:text="退款中"
        app:text_margin="4dp" />

    <com.chiclaim.android.ui.view.StampView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:circle_color="#ff0033"
        app:circles_gap="2dp"
        app:inside_circle_border_width="1dp"
        app:outside_circle_border_width="1.7dp"
        app:text="退款失败"
        app:text_margin="4dp" />

    <com.chiclaim.android.ui.view.StampView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:circle_color="#00cc33"
        app:circles_gap="2dp"
        app:inside_circle_border_width="1dp"
        app:outside_circle_border_width="1.7dp"
        app:text="退款成功"
        app:text_margin="4dp" />

    <com.chiclaim.android.ui.view.StampView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:circle_color="#dcdcdc"
        app:circles_gap="2dp"
        app:inside_circle_border_width="1dp"
        app:outside_circle_border_width="1.7dp"
        app:text="退款关闭"
        app:text_margin="4dp" />


</LinearLayout>
